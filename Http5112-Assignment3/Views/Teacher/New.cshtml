
@{
    ViewBag.Title = "New";
}


<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/List">Back To Teachers</a>
    </nav>
    <h2>New Teacher</h2>
    <form method="POST" action="/Teacher/Create">
        <div class="inputrow">
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" required />

        </div>
        <div class="inputrow">
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" required/>

        </div>
        <div class="inputrow">
            <label for="TeacherEmployeeNumber">Employee Number:</label>
            <input type="text" id="EmployeeNumber" name="TeacherEmployeeNumber" required/>
        </div>

       <p id="errorMessage"></p>
        <div class="inputrow">
            <input type="submit" value="Create Teacher" id="submit"/>
        </div>
    </form>
</div>


<script>

    var submitBtn = document.getElementById("submit")

    submitBtn.addEventListener('click', validateForm)
    function validateForm(e) {
        
        // Get the input elements
        var TeacherFname = document.getElementById("TeacherFname");
        var TeacherLlname = document.getElementById("TeacherLname");
        var EmployeeNumber = document.getElementById("EmployeeNumber");
        var errorMessage = document.getElementById("errorMessage");

        // Check if the input values are not empty
        if (TeacherFname.value == "" || TeacherLlname.value == "" || EmployeeNumber.value == "") {
            e.preventDefault()
            errorMessage.innerHTML = "Please fill in all the required fields.";
            return false;
        }
        // Return true if all the validation checks pass
        return true;
    }
</script>